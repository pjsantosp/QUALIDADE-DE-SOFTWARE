@model IEnumerable<Atendimento.Hospitalar.Models.Paciente>

<h2>Lista de Paciente</h2>

<p>
    @Html.ActionLink("Cadastrar Paciente", "Novo",null, new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.Label("Data de Nascimento")
        </th>
        <th>
            @Html.Label("Tipo de Convenio")
        </th>
        <th>
            @Html.Label("Nome")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.dtNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoConveniado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a title="Alterar" class="btn btn-primary" href="@Url.Action("Alterar", "Paciente", new { id = item.PacienteId})">Alterar</a>
            <a title="Excluir" class="btn btn-danger" href="@Url.Action("Excluir", "Paciente" ,new { id = item.PacienteId })">Excluir</a>
        </td>
    </tr>
}

</table>
