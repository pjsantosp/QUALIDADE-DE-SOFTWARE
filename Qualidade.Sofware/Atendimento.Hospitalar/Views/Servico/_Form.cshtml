@model Atendimento.Hospitalar.Models.Servico

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Servico</h4>
    <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-10">
            <div class="form-group">
                @Html.Label("Descrição do Serviço")
                @Html.TextAreaFor(model => model.Descricao, 5, 175, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Gravar" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })

            </div>
        </div>
}

